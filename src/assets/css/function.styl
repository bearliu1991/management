bgColor(color=#fff)
  background-color:color
gradientRed()
  background-image: -webkit-linear-gradient(to bottom, #e7556e 0, #f95867 100%)
  background-image:linear-gradient(to bottom, #e7556e 0, #f95867 100%)
gradientBlue()
  background-image:-webkit-linear-gradient(to bottom, #25d1ff 0, #5397fa 100%)
  background-image:linear-gradient(to bottom, #25d1ff 0, #5397fa 100%)
gradient(n)
  background-image:-webkit-linear-gradient(n)
  background-image:linear-gradient(n)
gradientIE(type, startColor, endColor)
  if support-for-ie
    filter unquote('progid:DXImageTransform.Microsoft.gradient(startcolorstr=' + startColor + ',endcolorstr=' + endColor + ',gradientType = ' + type +')')
