// 引用图片简写
bgNormal(n)
  background:url(n) center center no-repeat
bgFull(n)
  background:url(n) center center no-repeat
  background-size:cover
bgAll(n)
  background:url(n) center center no-repeat
  background-size:100% 100%
backgroundImg()
  background-repeat:no-repeat
  background-position :center center
bgCover()
  background-size:cover
bgColor(n=#fff)
	background-color:n
boxSizing()
  box-sizing:border-box
color(color=#fff)
  color:color
opacity(n)
  opacity:n
bgRed()
  background-color:#ff6681
bgGrey()
  background-color:#dcdddd
radius(n)
  -webkit-border-radius: n
  -moz-border-radius: n
  border-radius: n
radiusTop(n)
  border-top-left-radius: n
  border-top-right-radius: n
radiusLeft(n)
  border-top-left-radius: n
  border-bottom-left-radius: n
radiusRight(n)
  border-top-right-radius: n
  border-bottom-right-radius: n
radiusBottom(n)
  border-bottom-left-radius: n
  border-bottom-right-radius: n
cursor()
  cursor:pointer
border(n)
  border-1px solid n
boxShadow(n)
  box-shadow: n
